{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "info",
        "QUEUE_CONCURRENCY": "4",
        "MAX_JOB_ATTEMPTS": "3",
        "JOB_TIMEOUT": "600000"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "LOG_LEVEL": "debug",
        "QUEUE_CONCURRENCY": "2",
        "MAX_JOB_ATTEMPTS": "2",
        "JOB_TIMEOUT": "300000"
      }
    }
  }
}
