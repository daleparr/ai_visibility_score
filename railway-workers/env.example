# Railway Environment Configuration
NODE_ENV=development
PORT=3000

# Redis Configuration (Railway will provide this)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
NETLIFY_CALLBACK_SECRET=your-netlify-callback-secret

# Netlify Integration
NETLIFY_CALLBACK_URL=https://ai-visibility-score.netlify.app/api/bridge/callback
ALLOWED_ORIGINS=https://ai-visibility-score.netlify.app,http://localhost:3000

# External APIs (for agents)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
MISTRAL_API_KEY=your-mistral-api-key
BRAVE_API_KEY=your-brave-search-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key

# Database (shared with Netlify)
DATABASE_URL=postgresql://user:password@host:port/database

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# Queue Configuration
QUEUE_CONCURRENCY=4
MAX_JOB_ATTEMPTS=3
JOB_TIMEOUT=600000
