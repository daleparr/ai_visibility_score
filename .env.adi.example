# AI Discoverability Index (ADI) Environment Configuration
# Copy this to .env.local and update with your actual values

# === ADI Core Configuration ===
ADI_VERSION=v1.0
ADI_ENVIRONMENT=development
ADI_DEBUG=true

# === ADI Admin Configuration ===
ADI_ADMIN_KEY=your_secure_admin_key_here
ADI_ENCRYPTION_KEY=your_32_character_encryption_key_here

# === ADI API Configuration ===
ADI_API_BASE_URL=http://localhost:3000/api/adi
ADI_API_RATE_LIMIT_WINDOW=86400000
ADI_API_RATE_LIMIT_MAX_REQUESTS=1000

# === ADI Subscription Limits ===
ADI_FREE_TIER_MONTHLY_LIMIT=3
ADI_PROFESSIONAL_TIER_MONTHLY_LIMIT=25
ADI_ENTERPRISE_TIER_MONTHLY_LIMIT=-1

ADI_FREE_TIER_API_LIMIT=0
ADI_PROFESSIONAL_TIER_API_LIMIT=1000
ADI_ENTERPRISE_TIER_API_LIMIT=10000

# === ADI Agent Configuration ===
ADI_AGENT_TIMEOUT=45000
ADI_AGENT_RETRY_LIMIT=3
ADI_AGENT_PARALLEL_LIMIT=5

# === ADI Benchmarking Configuration ===
ADI_BENCHMARK_MIN_BRANDS=10
ADI_BENCHMARK_UPDATE_INTERVAL=7
ADI_BENCHMARK_RETENTION_DAYS=365

# === ADI Evaluation Configuration ===
ADI_EVALUATION_TIMEOUT=300000
ADI_CRAWL_TIMEOUT=30000
ADI_CRAWL_MAX_PAGES=50
ADI_CRAWL_DELAY=1000

# === ADI Scoring Configuration ===
ADI_CONFIDENCE_THRESHOLD=0.7
ADI_RELIABILITY_THRESHOLD=0.8
ADI_MIN_CONSENSUS_MODELS=2

# === ADI Industry Configuration ===
ADI_DEFAULT_INDUSTRY=general
ADI_QUERY_CANON_SIZE=20
ADI_INDUSTRY_UPDATE_INTERVAL=30

# === ADI Leaderboard Configuration ===
ADI_LEADERBOARD_UPDATE_INTERVAL=24
ADI_LEADERBOARD_MAX_ENTRIES=100
ADI_LEADERBOARD_PUBLIC_DEFAULT=false

# === ADI Storage Configuration ===
ADI_ARTIFACT_STORAGE_PATH=/tmp/adi-artifacts
ADI_ARTIFACT_RETENTION_DAYS=90
ADI_ARTIFACT_MAX_SIZE=10485760

# === ADI Monitoring Configuration ===
ADI_MONITORING_ENABLED=true
ADI_METRICS_ENDPOINT=/api/adi/metrics
ADI_HEALTH_CHECK_INTERVAL=60000

# === ADI External Services ===
# Citation Analysis
CITATION_API_KEY=your_citation_api_key
CITATION_API_BASE_URL=https://api.citation-service.com

# Knowledge Graph APIs
GOOGLE_KG_API_KEY=your_google_kg_api_key
WIKIDATA_API_BASE_URL=https://www.wikidata.org/w/api.php

# Media Monitoring
MEDIA_MONITORING_API_KEY=your_media_api_key
MEDIA_MONITORING_BASE_URL=https://api.media-monitor.com

# Academic Citation Services
ACADEMIC_API_KEY=your_academic_api_key
ACADEMIC_API_BASE_URL=https://api.academic-service.com

# === ADI AI Provider Configuration ===
# These should match your existing AI provider setup
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_AI_API_KEY=your_google_ai_api_key
MISTRAL_API_KEY=your_mistral_api_key
LLAMA_API_KEY=your_llama_api_key

# === ADI Billing Integration ===
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ADI Product IDs in Stripe
STRIPE_PROFESSIONAL_PRICE_ID=price_professional_monthly
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly

# === ADI Email Configuration ===
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@your-domain.com

# === ADI Webhook Configuration ===
ADI_WEBHOOK_SECRET=your_webhook_secret_key
ADI_WEBHOOK_ENDPOINTS=https://your-domain.com/api/webhooks/adi

# === ADI Cache Configuration ===
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600
CACHE_ENABLED=true

# === ADI Security Configuration ===
JWT_SECRET=your_jwt_secret_key
SESSION_SECRET=your_session_secret_key
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# === ADI Feature Flags ===
ADI_FEATURE_BENCHMARKING=true
ADI_FEATURE_LEADERBOARDS=true
ADI_FEATURE_API_ACCESS=true
ADI_FEATURE_COMPETITOR_ANALYSIS=true
ADI_FEATURE_TREND_ANALYSIS=true

# === ADI Development Configuration ===
ADI_MOCK_AGENTS=false
ADI_MOCK_EXTERNAL_APIS=true
ADI_SKIP_RATE_LIMITING=true
ADI_VERBOSE_LOGGING=true

# === ADI Production Configuration ===
# Uncomment and configure for production deployment
# ADI_ENVIRONMENT=production
# ADI_DEBUG=false
# ADI_MOCK_AGENTS=false
# ADI_MOCK_EXTERNAL_APIS=false
# ADI_SKIP_RATE_LIMITING=false
# ADI_VERBOSE_LOGGING=false